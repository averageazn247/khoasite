<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name, "Name" %> 
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>
      
      <%= f.label :password ,"*Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "*Confirm password" %>
      <%= f.password_field :password_confirmation %>

      
      <%= f.label :phone, "phone XXX-XXX-XXXX" %>
      <%= f.text_field :phone %>
      
 
      <%= f.label :company %>
      <%= f.text_field :company %>  
      
       <%= f.label :web, "Website" %>
      <%= f.text_field :web %>            
          



      <%= f.submit "Save Settings", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>